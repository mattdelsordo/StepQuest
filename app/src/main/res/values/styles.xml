    <style name="TextViewStatDisplay" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:maxHeight">6dp</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:indeterminate">false</item>
    </style>

    <style name="DialogTheme" parent="AlertDialog.AppCompat.Light">

