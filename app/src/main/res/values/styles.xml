<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="colorSwitchThumbNormal">@color/colorSecondaryLight</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle</item>

    </style>

    <style name="TextViewStatDisplay" parent="AppTheme">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:theme">@style/Progress</item>
    </style>
    <style name="Progress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:progressBackgroundTint">@color/colorSecondaryLight</item>
    </style>


</resources>
