<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:elevation="2dp"
    android:outlineProvider="bounds"
    android:clipToPadding="false"
    android:layout_margin="4dp"
    android:background="@color/background_holo_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_weapon_background"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageview_weapon_icon"
            android:src="@drawable/ic_temp_weapon"
            android:padding="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_weapon_name"
            android:text="@string/weapon_name"
            android:textStyle="bold"
            android:padding="6dp"
            android:paddingEnd="3dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_weapon_quantity"
            android:text="@string/default_weapon_quantity"
            android:padding="4dp"
            android:paddingStart="0dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_weapon_buff"
            android:text="@string/default_buff_text"
            android:textSize="18sp"
            android:padding="6dp"/>

    </LinearLayout>



</FrameLayout>